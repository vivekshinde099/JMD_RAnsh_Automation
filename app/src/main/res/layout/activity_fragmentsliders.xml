<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/formlayouttoshow"
    tools:context=".StatingModels.Fragmentsliders">



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include
        layout="@layout/tab_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/one"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selected_drawable"/>

        <TextView
            android:id="@+id/two"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/unselected_drawable"/>
        <TextView
            android:id="@+id/three"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/unselected_drawable"/>
        <TextView
            android:id="@+id/four"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/unselected_drawable"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/some_id"
            android:layout_width="8dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textColor="@color/DarkBlack"
            android:textStyle="bold"
            android:fontFamily="@font/jiotype_medium"
            android:textAppearance="@style/some_id"
            android:gravity="center_vertical"
            />
        <View
            android:id="@+id/vector_82"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/vector_82"
            />
        <TextView
            android:layout_width="8dp"
            android:layout_height="20dp"
            android:layout_marginTop="28dp"
            android:text="4"
            android:textStyle="bold"
            android:textColor="@color/DarkBlack"
            android:fontFamily="@font/jiotype_medium"
            android:textAppearance="@style/some_id"
            android:lineSpacingExtra="4sp"
            android:gravity="center_vertical"
            />
    </LinearLayout>


</RelativeLayout>