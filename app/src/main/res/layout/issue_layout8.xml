<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/shadowfile"
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/step8txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/jiotype_black"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/checkingissue8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jiotype_medium"
                    android:textSize="16sp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/checkingissuedes8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jiotype_medium"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="" />



                    <Switch
                        android:id="@+id/Wifi_switch"
                        android:visibility="gone"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="" />

                </LinearLayout>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/jiotype_bold"
                    android:textAllCaps="false"
                    android:layout_height="32dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:background="@drawable/green_button"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/secondButtonTextcolor"
                    android:layout_gravity="left"
                    android:textSize="16sp"
                    android:text="Click"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>