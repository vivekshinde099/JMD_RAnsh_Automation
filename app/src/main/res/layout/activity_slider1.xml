<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Green"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome_to"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/welcome_to"
            android:fontFamily="@font/jiotype_medium"
            android:textAppearance="@style/welcome_to"
            android:lineSpacingExtra="3sp"
            android:gravity="bottom|center"
            android:padding="@dimen/_15sdp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo"/>

        <TextView
            android:id="@+id/r_ansh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/r_ansh"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/r_ansh"
            android:fontFamily="@font/jiotype_black"
            android:lineSpacingExtra="0sp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/atam_nirbha"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/atam_nirbha"
            android:fontFamily="@font/jiotype_medium"
            android:gravity="center|bottom"
            android:padding="20dp"
            android:lineSpacingExtra="0sp"
            android:layout_gravity="center" />



    </LinearLayout>







</RelativeLayout>