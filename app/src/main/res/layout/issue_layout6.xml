<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/shadowfile"
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="60dp"
                android:layout_weight="1"
                android:minWidth="100dp"
                android:rotation="270"/>

            <LinearLayout
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/step6txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/jiotype_black"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/checkingissue6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jiotype_medium"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="" />

                <TextView
                    android:id="@+id/checkingissuedes6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jiotype_medium"
                    android:textSize="16sp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonyes6"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/jiotype_bold"
                        android:textAllCaps="false"
                        android:layout_height="32dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/green_button"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/secondButtonTextcolor"
                        android:layout_gravity="left"
                        android:textSize="16sp"
                        android:text="Yes"/>
                    <Button
                        android:id="@+id/buttonno6"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/jiotype_bold"
                        android:textAllCaps="false"
                        android:layout_height="32dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:background="@drawable/green_button"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/secondButtonTextcolor"
                        android:layout_gravity="left"
                        android:textSize="16sp"
                        android:text="No"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>