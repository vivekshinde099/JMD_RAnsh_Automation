<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idLayout"
    android:background="@color/Voilet"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Upload_imagebutton_activity">

     <LinearLayout
        android:id="@+id/upload_activity_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/jiotype_medium"
        android:gravity="center"
        android:layout_above="@+id/upload_activity_linearlayout"
        android:text="@string/kindly_upload_error_snapshot"/>


        <ImageView
            android:id="@+id/uploadimage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <Button
        android:id="@+id/upload_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/button_backgrounds"
        android:backgroundTint="@color/Red"
        android:fontFamily="@font/jiotype_medium"
        android:textAllCaps="false"
        android:padding="@dimen/_5sdp"
        android:text="@string/upload_error_screenshot_btn"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/uploadtext"
        android:layout_width="match_parent"
        android:textColor="#FF2300"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/uploadresulttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:visibility="gone"/>

        <Button
            android:id="@+id/getsolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/get_solution"
            android:background="@drawable/button_backgrounds"
            android:backgroundTint="@color/Red"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/jiotype_medium"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:fontFamily="@font/jiotype_medium"
            android:gravity="center"
            android:text="@string/if_not_available_click_below_to_proceed_manually"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <Button
            android:id="@+id/btn_to_mainscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/button_backgrounds"
            android:backgroundTint="@color/Red"
            android:fontFamily="@font/jiotype_medium"
            android:onClick="open_main_layout"
            android:textAllCaps="false"
            android:padding="@dimen/_5sdp"
            android:text="Next"
            android:textColor="@color/white"
            android:layout_gravity="center"/>


    </LinearLayout>


