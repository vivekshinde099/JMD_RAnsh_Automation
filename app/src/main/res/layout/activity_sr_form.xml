<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
    android:id="@+id/formlayouttoshow"
        android:background="@color/white"
        tools:context=".SR_Form">


    <ImageView
        android:id="@+id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ImageView>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:orientation="vertical">


            <EditText
                android:id="@+id/encoded_string"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:inputType="textMultiLine"
                android:hint="Enter Details"
                android:gravity="top|left"
                android:maxLength="1000000000"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:textColor="@color/Black"
                android:textColorHint="@color/Grey"
                android:backgroundTint="@color/white"
                android:textSize="15dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/btticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gone"
                android:visibility="gone"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:textSize="@dimen/_20sdp"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRM ID :"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_marginVertical="10dp"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadowfile"
                android:layout_margin="5dp"
                app:cardCornerRadius="@dimen/_5sdp">

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:ems="10"
                android:maxLength="10"
                android:layout_margin="@dimen/_5sdp"
                android:textColorHint="@color/white"
                android:background="@color/white"
                android:padding="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:inputType="number"
                android:editable="false"
                android:hint="Enter PRM/POS ID"
                android:textSize="15dp"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Subject : "
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadowfile"
                android:layout_margin="5dp"
                app:cardCornerRadius="@dimen/_5sdp">

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/white"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textColorHint="@color/Grey"
                android:textColor="@color/Black"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:hint="Enter Subject"
                android:textSize="15dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadowfile"
                android:layout_margin="5dp"
                app:cardCornerRadius="@dimen/_5sdp">

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:inputType="textMultiLine"
                android:hint="Enter Details"
                android:gravity="top|left"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/Black"
                android:textColorHint="@color/Grey"
                android:backgroundTint="@color/white"
                android:textSize="15dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <TextView
        android:id="@+id/arraytext"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/sr_progressbar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

        <ScrollView
            android:id="@+id/Scrollviewsrpage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/main_layout"
            android:layout_above="@+id/layoutcreateticket"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:background="@drawable/background_stroke"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

               <ImageView
                   android:id="@+id/imageattchemnt1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:src="@drawable/ic_baseline_attachment_24"/>

                    <TextView
                        android:id="@+id/path_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/jiotype_medium"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Attachment" />



                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/layoutcreateticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/createticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textAllCaps="false"
                android:textColor="@color/secondButtonTextcolor"
                android:background="@drawable/green_button"
                android:backgroundTint="@color/Green"
                android:fontFamily="@font/jiotype_bold"
                android:textSize="@dimen/_15sdp"
                android:elevation="@dimen/_20sdp"
                android:text="Create Ticket" />


        </LinearLayout>

    <LinearLayout
        android:id="@+id/checking_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:weightSum="10"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need to Do Basic Troubleshooting"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/jiotype_medium"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1"
            android:textColor="@color/Black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="vertical">

        <TextView
            android:id="@+id/query1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need to Do Basic Troubleshooting"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/jiotype_medium"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/query2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/jiotype_medium"
            android:layout_gravity="right"
            android:textColor="@color/Black"/>

        <Button
            android:id="@+id/btnquery1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/green_button"
            android:textAllCaps="false"
            android:textColor="@color/secondButtonTextcolor"
            android:layout_gravity="left"
            android:fontFamily="@font/jiotype_medium"
            android:backgroundTint="@color/Green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:layout_weight="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/querys1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need to Do Basic Troubleshooting"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/jiotype_medium"
                    android:layout_weight="1"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/querys2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="right"
                    android:fontFamily="@font/jiotype_medium"
                    android:layout_weight="1"
                    android:textColor="@color/Black"/>

                <Button
                    android:id="@+id/btnquerys2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/green_button"
                    android:layout_weight="1"
                    android:textColor="@color/secondButtonTextcolor"
                    android:textAllCaps="false"
                    android:fontFamily="@font/jiotype_medium"
                    android:backgroundTint="@color/Green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_weight="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/queryt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need to Do Basic Troubleshooting"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/jiotype_medium"
                    android:layout_weight="1"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/queryt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/jiotype_medium"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textColor="@color/Black"/>

                <Button
                    android:id="@+id/btnqueryt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/green_button"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/secondButtonTextcolor"
                    android:fontFamily="@font/jiotype_medium"
                    android:backgroundTint="@color/Green"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    </RelativeLayout>



