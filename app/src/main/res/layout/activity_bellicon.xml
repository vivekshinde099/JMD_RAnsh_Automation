<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        android:id="@+id/text_view_brodcast"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/Black"
        android:fontFamily="@font/jiotype_bold"
        android:text="Broadcast" />
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shadowfile"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/card_layout1"
        android:visibility="visible"
        android:layout_below="@id/text_view_brodcast">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_round_info_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_ticker"
            android:text=""
            android:letterSpacing="-0.01"
            android:textSize="16sp"
            android:textColor="@color/Black_60"
            android:fontFamily="@font/jiotype_medium"
            android:padding="5dp"
            android:layout_marginLeft="50dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/card_layout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/Black"
        android:fontFamily="@font/jiotype_bold"
        android:text="Notification" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notification_recycler"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/notification"
        android:layout_height="wrap_content"/>


</RelativeLayout>


