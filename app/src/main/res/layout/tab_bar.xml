<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/launch_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Begin"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/jiotype_medium"
        android:background="@drawable/green_button"
        android:backgroundTint="@color/LightGreen"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAppearance="@style/btn"
        />
    <Button
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/jiotype_medium"
        android:background="@drawable/green_button"
        android:backgroundTint="@color/LightGreen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAppearance="@style/btn"
        />
    <Button
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/jiotype_medium"
        android:background="@drawable/green_button"
        android:backgroundTint="@color/LightGreen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAppearance="@style/btn"
        />

    <LinearLayout
        android:id="@+id/tncl1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="bottom|center"
        android:orientation="horizontal">
<!--  -->
        <TextView
            android:id="@+id/checkboxtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/jiotype_medium"
            android:text="By continuing, you agree to our "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tncl2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/checkboxtextview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/jiotype_medium"
            android:text="@string/terms_condition"
            android:textColor="@color/Blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/jiotype_medium"
            android:text=" and " />
        <TextView
            android:id="@+id/checkboxtextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/jiotype_medium"
            android:text="@string/privacy_policy"
            android:textColor="@color/Blue"/>
    </LinearLayout>
    <Button
        android:id="@+id/Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="@font/jiotype_medium"
        android:background="@drawable/green_button"
        android:backgroundTint="@color/LightGreen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAppearance="@style/btn"
        />
</LinearLayout>
</RelativeLayout>