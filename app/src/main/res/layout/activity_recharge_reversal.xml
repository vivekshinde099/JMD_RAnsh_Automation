<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maincontener"
    android:background="@color/white"
    tools:context=".RechargeReversal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/TextView1">

    <LinearLayout
        android:id="@+id/linearmain1"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">




        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/jiotype_medium"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Check Eligibility :"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jiotype_medium"
            android:textColor="@color/Black"
            android:text="1. Is it the first Recharge Reversal for this Month ?"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="150dp"
            android:layout_height="40dp"

            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Yes1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/No1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/Black"
            android:text=" "
            android:fontFamily="@font/jiotype_medium"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/Yes2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/No2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/Black"
                android:fontFamily="@font/jiotype_medium"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=" "
            android:fontFamily="@font/jiotype_medium"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/group3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:fontFamily="@font/jiotype_medium"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Yes3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/jiotype_medium"
                android:checked="false"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/No3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/jiotype_medium"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=" "
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/group4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:fontFamily="@font/jiotype_medium"
            android:textColor="@color/Black"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Yes4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:fontFamily="@font/jiotype_medium"
                android:textColor="@color/Black"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/No4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:fontFamily="@font/jiotype_medium"
                android:textColor="@color/Black"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="match_parent"
            android:paddingTop="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:visibility="gone"
            android:text=""
            android:textSize="20dp" />

        <Button
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:background="@drawable/green_button"
            android:textColor="@color/secondButtonTextcolor"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="16sp"
            android:fontFamily="@font/jiotype_medium"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:text="Proceed"/>




    </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/linearmain2"
        android:visibility="gone"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:textColor="@color/Black"
        android:fontFamily="@font/jiotype_medium"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="" />


        <TextView
            android:id="@+id/fragment_text1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textSize="20dp"
            android:text="Log in JIO POS Plus App " />

        <TextView
            android:id="@+id/fragment_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:text="Click on 'MENU--> JIO Sales-->Recharge Reversal.'" />

        <TextView
            android:id="@+id/fragment_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textSize="20dp"
            android:text="Kindly enter ORN number and Mobile number" />
        <TextView
            android:id="@+id/fragment_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:text="Select the Valid Reason and click on Generate_OTP " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="--------------------" />

        <TextView
            android:id="@+id/fragment_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:text="Note : You can use the OTP within 24 Hours . Follow the steps mentioned below :-" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textStyle="bold"
            android:text="--------------------" />

        <TextView
            android:id="@+id/fragment_text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textAlignment="center"
            android:text="" />

        <TextView
            android:id="@+id/fragment_text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:text="Login to Jio Pos Plus App.'" />

        <TextView
            android:id="@+id/fragment_text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:text="Click on 'MENU--> Jio Other Sales-->View Reversal-->Enter OTP'" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/Black"
            android:fontFamily="@font/jiotype_medium"
            android:textAlignment="center"
            android:text="" />


        <Button
            android:id="@+id/masterdatasubbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/jiotype_medium"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/green_button"
            android:backgroundTint="@color/Green"
            android:textColor="@color/secondButtonTextcolor"
            android:textAppearance="@style/label"
            />


    </LinearLayout>

    </ScrollView>



</RelativeLayout>