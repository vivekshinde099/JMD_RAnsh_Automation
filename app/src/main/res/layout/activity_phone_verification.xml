<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    tools:context=".PhoneVerification">

    <ImageView
        android:id="@+id/jio_logo_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/jio_logo_bg"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:src="@drawable/jio_logo_trnsprt_red"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/jiotype_medium"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_margin="@dimen/_10sdp">

            <EditText
                android:id="@+id/phonenumberenteredbyuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_15sdp"
                android:backgroundTint="@color/Voilet"/>
        </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/verifybutton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:backgroundTint="@color/Red"
        android:textColor="@color/white"
        android:fontFamily="@font/jiotype_black"
        android:text="@string/Submit_btn"
        android:layout_gravity="center"
        android:elevation="@dimen/_20sdp"
        android:background="@drawable/button_backgrounds"
        />

    <ProgressBar
        android:id="@+id/phoneverifyprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/white"
        />

    </LinearLayout>

</RelativeLayout>